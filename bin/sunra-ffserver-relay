#!/usr/bin/env bash

#RUBY=`which ruby`
#RUBY="/home/sowhat/.rvm/environments/ruby-2.0.0-p195"
RUBY="/home/leej/.rvm/rubies/ruby-2.0.0-p0/bin/ruby"

if [[ -s $RUBY ]]
then
  source $RUBY
  exec /opt/sunra/sunra-ffserver-relay/sunra-ffserver-relay.rb "$@"
else
  echo "ERROR: Missing Ruby/RVM environment file: $RUBY" >&2
  echo "or cannot find ruby interpreter"
  exit 1
fi
